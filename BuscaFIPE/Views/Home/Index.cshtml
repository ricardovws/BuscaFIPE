@model BuscaFIPE.Models.InfosFipeApiViewModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-md-3">
        
        <label for="veiculos">Escolha um tipo de veículo:</label>
        <select asp-for="Veiculo" asp-items="Model.Tipos" id="opcoesVeiculos"
                onchange="buscaMarcas(this.options[this.selectedIndex].value)"></select>


        <label for="marcas">Escolha uma marca:</label>
        <div>
            @await Html.PartialAsync("_Marcas", Model)
        </div>

    </div>
</div>
@section Scripts{
    <script src="~/js/buscas.js">
    </script>
}
